<div class="container">
	<div class="form-step--item active">
		<form class="form" {{action "update" on="submit"}}>
			<div class="row mb-3">
				<div class="col-12 col-sm">
					<div class="form-group">
						<label class="form-label">First Name</label>
						{{input type="text"
										value=user.person.firstName
										class="form-control"}}
					</div>
				</div>
				<div class="col-12 col-sm">
					<div class="form-group">
						<label class="form-label">Middle Name</label>
						{{input type="text"
										value=user.person.middleName
										class="form-control"}}
					</div>
				</div>
				<div class="col-12 col-sm">
					<div class="form-group">
						<label class="form-label">Last Name</label>
						{{input type="text"
										value=user.person.lastName
										class="form-control"}}
					</div>
				</div>
			</div>
			<div class="row mb-3">
				<div class="col-12 col-sm-6">
					<div class="form-group">
						<label class="form-label">Email</label>
						{{input type="text"
										value=user.email
										class="form-control"}}
					</div>
				</div>
				<div class="col-12 col-sm-6">
					<div class="form-group">
						<label class="form-label">Username</label>
						{{input type="text"
										value=user.username
										class="form-control"}}
					</div>
				</div>
			</div>
			<div class="row mb-3">
				<div class="col-12 col-sm-4">
					<label class="form-label block">Date of Birth</label>
					<div class="input-group">
						{{input type="date"
										value=user.person.dateOfBirth
										class="form-control datepicker date"}}
						<div class="input-group-prepend">
							<span class="input-group-text">
								{{fa-icon "calendar"
													ariaLabel="Select a Date"}}
							</span>
						</div>
					</div>
				</div>
				<div class="col-12 col-sm-4">
					<div class="form-group">
						<label class="form-label">
							Gender
						</label>
						<select
							id="genderSelect"
							class="form-control"
							onchange={{action "updateValue" value="target.value"}}>
							<option name="gender" value="{{user.person.gender.id}}" hidden>{{user.person.gender.name}}</option>
							{{#each user.gender as |gender|}}
								<option name="gender" value="{{gender.id}}">{{gender.name}}</option>
							{{/each}}
						</select>
					</div>
				</div>
			</div>
			<div class="row mt-3">
				<div class="col-9">
					<button id="updateBtn" type="submit" class="btn btn-blue">
						Update
					</button>
					<button id="cancleBtn" class="btn btn-blue--lt" {{ action "cancle" }}>
						Cancle Changes
					</button>
				</div>
				<div class="col-3">
					<span id="deleteBtn"
									class="btn btn-delete pull-right"
									data-toggle="modal"
									data-target="#deleteModal"
									title="Delete User">
						Delete User
					</span>
				</div>
			</div>
		</form>
	</div>
</div>

<div class="modal fade"
	id="deleteModal"
	tabindex="-1"
	role="dialog"
	aria-labelledby="deleteModal">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-body">
				<div class="yeild-symbol">
					<span class="yeild-line"></span>
					<span class="yeild-dot"></span>
				</div>
				<h2>Are you sure?</h2>
				<div class="text-muted">
					You will not be able to undo this action.
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-close" data-dismiss="modal">
					Cancel
				</button>
				<button type="button"
								data-dismiss="modal"
								class="btn btn-comfirm"
								{{ action "deleteUser" }}>
					Yes, delete!
				</button>
			</div>
		</div>
	</div>
</div>
