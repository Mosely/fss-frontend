{{#multi-step-form}}
	<form id="form" class="form" autocomplete="false" {{action "triggerSave" on="submit"}}>
		<div id="adult-intake-1" class="form-step--item active">
			<div class="row">
				<div class="col-12 mb-2">
					<span class="form-title">Personal Information</span>
				</div>
				<div class="col-12">
					<label class="form-label mt-3">
						Client Name
						<span class="star">*</span>
					</label>
				</div>
				<div class="col-12 col-sm">
					<div class="form-group">
						{{input type="text"
										value=firstName
										class="form-control required"
										placeholder="First Name"
										autocomplete="false"}}
					</div>
				</div>
				<div class="col-12 col-sm">
					<div class="form-group">
						{{input type="text"
										value=middleName
										class="form-control"
										placeholder="Middle Name"
										autocomplete="false"}}
					</div>
				</div>
				<div class="col-12 col-sm">
					<div class="form-group">
						{{input type="text"
										value=lastName
										class="form-control required"
										placeholder="Last Name"
										autocomplete="false"}}
					</div>
				</div>
			</div>
			<div class="row mb-3">
				<div class="col-12 col-sm-4">
					<div class="form-group">
						<label class="form-label">
							Date of Birth
							<span class="star">*</span>
						</label>
							<div class="input-group">
								{{input type="date"
												value=dateOfBirth
												class="form-control datepicker date required"
												autocomplete="false"}}
								<div class="input-group-prepend">
									<span class="input-group-text">
										{{fa-icon "calendar"
															ariaLabel="Pick a Date"}}
									</span>
								</div>
							</div>
					</div>
				</div>
				<div class="col-12 col-sm-5">
					<div class="form-group">
						<label class="form-label">
							Social Security #
							<span class="star">*</span>
						</label>
						{{input type="number"
										value=socialSecurityNumber
										placeholder="XXX-XX-XXXX"
										min="0"
										class="form-control required"}}
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-12">
					<label class="form-label">
						Address
						<span class="star">*</span>
					</label>
				</div>
				<div class="col-12 col-sm-2">
					<div class="form-group">
						{{input type="number"
										value=streetNumber
										placeholder="Street Number"
										class="form-control required"}}
					</div>
				</div>
				<div class="col-12 col-sm-6">
					<div class="form-group">
						{{input type="text"
										value=streetName
										placeholder="Street Name"
										class="form-control required"}}
					</div>
				</div>
				<div class="col-5 col-sm-2">
					<div class="form-group">
						{{input type="text"
										value=streetSuffix
										placeholder="Street Suffix"
										class="form-control required"}}
					</div>
				</div>
				<div class="col-5 col-sm-2">
					<div class="form-group">
						{{input type="number"
										value=apartmentNumber
										placeholder="(Apt. #)"
										min="0"
										class="form-control"}}
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-5">
					<div class="form-group">
						{{#power-select
							placeholder="Select County..."
							searchField="name"
							selected=selectedCounties
							options=adult.counties
							onchange=(action (mut selectedCounties)) as |county|}}
							{{county.name}}
						{{/power-select}}
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-7 col-sm-4">
					<div class="form-group">
						{{#power-select
							placeholder="Select City..."
							searchField="name"
							selected=selectedCities
							options=adult.cities
							onchange=(action (mut selectedCities)) as |city|}}
							{{city.name}}
						{{/power-select}}
					</div>
				</div>
				<div class="col-7 col-sm-4">
					<div class="form-group">
						<!-- <select id="stateSelect"
										value="stateData"
										class="form-control">
							<option name="state" value="" hidden>Select State...</option>
							{{#each adult.states as |state|}}
								<option name="state" value="{{state.id}}">{{state.name}}</option>
							{{/each}}
						</select> -->
						{{#power-select
							placeholder="Select State..."
							searchField="name"
							selected=selectedStates
							options=adult.states
							onchange=(action (mut selectedStates)) as |state|}}
							{{state.name}}
						{{/power-select}}
					</div>
				</div>
				<div class="col-5 col-sm-3">
					<div class="form-group">
						{{input type="number"
										value=zipcode
										placeholder="Zip code"
										min="0"
										class="form-control required"}}
					</div>
				</div>
			</div>
			<div class="row mb-3">
				<div class="col-12">
					<div class="form-group">
						{{x-toggle
							value=isPrimaryAddress
							showLabels=true
							theme="light"
							size="medium"
							onLabel="Is Primary"
							offLabel=""
							onToggle=(action (mut isPrimaryAddress))
						}}
					</div>
				</div>
			</div>
			<div class="row justify-content-between mb-2">
				<div class="col-12">
					<label class="form-label mb-4">
						Which category best describes:
						<span class="star">*</span>
					</label>
				</div>
					{{#each adult.ethnicities as |ethnicity|}}
					<div class="col-12 col-sm-4">
						<div class="form-check mb-3">
							{{input type="radio"
											class="form-check-input ethnicity"
											name="ethnicity"
											change=(action (mut clientEthnicities ) value="target.value")
											id=ethnicity.id
											value=ethnicity.id}}
							<label for="{{ethnicity.id}}"
										 class="form-check-label">
								{{ethnicity.name}}
							</label>
						</div>
					</div>
					{{/each}}
			</div>
			<div class="row">
				<div class="col-12">
					<span class="card--divider"></span>
				</div>
			</div>
		</div>
		<div id="adult-intake-2" class="form-step--item hidden">
			<div class="row justify-content-between mb-2 align-items-center">
				<div class="col-12">
					<span class="form-title">Personal Details</span>
				</div>
				<div class="col-12 col-sm-6">
					<label class="form-label mt-3">
						Primary Language:
						<span class="star">*</span>
					</label>
					<div class="form-group">
						{{#power-select
							placeholder="Select Language..."
							searchField="name"
							selected=clientLanguages
							options=adult.languages
							onchange=(action (mut clientLanguages)) as |language|}}
							{{language.name}}
						{{/power-select}}
					</div>
					<div class="form-group">
						{{x-toggle
							value=isPrimaryLanguage
							showLabels=true
							theme="light"
							size="medium"
							onLabel="Is Primary"
							offLabel=""
							onToggle=(action (mut isPrimaryLanguage))
						}}
					</div>
				</div>
				<div class="col-12 col-sm-6">
					<label class="form-label mt-3">
						Other Languages:
					</label>
					<div class="form-group">
						{{#power-select
							placeholder="Select Other Language..."
							searchField="name"
							selected=selectedLanguages
							options=adult.languages
							onchange=(action (mut selectedLanguages)) as |language|}}
							{{language.name}}
						{{/power-select}}
					</div>
				</div>
				<div class="col-12 col-sm-6">
					<label class="form-label mt-3">
						Place of Employment:
						<span class="star">*</span>
					</label>
					<div class="form-group">
						{{input type="text"
										class="form-control"
										id="placeOfEmployment"
										value=placeOfEmployment}}
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-12">
					<label class="form-label mt-3">
						Clent Phone:
					</label>
				</div>
				<div class="col-12">
					<div class="row">
						<div class="col-3">
							<div class="form-group">
								<select
									id="medicationSelect"
									value="medication"
									onchange={{action (mut phoneType) value="target.value"}}
									class="form-control">
										<option value="" hidden>Phone Type...</option>
										<option value="HOME">Home</option>
										<option value="MOBILE">Mobile</option>
										<option value="WORK">Work</option>
								</select>
							</div>
						</div>
						<div class="col-4">
							<div class="form-group phone-number">
								( {{input type="number"
												min="0"
												class="form-control number"
												name="areaCode"
												placeholder="XXX"
												value=areaCode}} )
								{{input type="number"
												min="0"
												class="form-control number phone"
												name="phoneNumber"
												placeholder="XXX-XXXX"
												value=phoneNumber}}
							</div>
						</div>
						<div class="col-2">
							<div class="form-group">
								{{input type="number"
												min="0"
												class="form-control"
												placeholder="(Ext. #)"
												value=extension}}
							</div>
						</div>
					</div>
				</div>
				<div class="col-12">
					<div class="row">
						<div class="col-3">
							<label class="block">
								Can Call?
							</label>
							<div class="form-group">
								{{x-toggle
									value=canCall
									showLabels=true
									theme="light"
									size="medium"
									onLabel="Yes"
									offLabel="No"
									onToggle=(action (mut canCall))
								}}
							</div>
						</div>
						<div class="col-3">
							<label class="block">
								Is Primary?
							</label>
							<div class="form-group">
								{{x-toggle
									value=isPrimaryPhone
									showLabels=true
									theme="light"
									size="medium"
									onLabel="Yes"
									offLabel="No"
									onToggle=(action (mut isPrimaryPhone))
								}}
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="row mt-5">
				<div class="col-12 col-sm mb-2">
					<label class="form-label">
						Are you a Service Member or a Veteran?
						<span class="star">*</span>
					</label>
					<div class="form-check inline-block">
						{{input type="radio"
										class="form-check-input"
										name="isServiceMemberOrVeteran"
										id="isServiceMemberOrVeteranYes"
										change=(action (mut isServiceMemberOrVeteran) value="target.value")
										value=true}}
						<label for="isServiceMemberOrVeteranYes"
									 class="form-check-label">
							Yes
						</label>
					</div>
					<div class="form-check inline-block">
						{{input type="radio"
										class="form-check-input"
										name="isServiceMemberOrVeteran"
										id="isServiceMemberOrVeteranNo"
										change=(action (mut isServiceMemberOrVeteran) value="target.value")
										value=false}}
						<label for="isServiceMemberOrVeteranNo"
									 class="form-check-label">
							No
						</label>
					</div>
				</div>
				<div class="col-12 col-sm mb-2">
					<label class="form-label">
						Are you a family member of a Service Member or a Veteran?
						<span class="star">*</span>
					</label>
					<div class="form-check inline-block">
						{{input type="radio"
										class="form-check-input"
										name="hasFamilyWhoIsServiceMemberOrVeteran"
										id="hasFamilyWhoIsServiceMemberOrVeteranYes"
										change=(action (mut hasFamilyWhoIsServiceMemberOrVeteran) value="target.value")
										value=true}}
						<label for="hasFamilyWhoIsServiceMemberOrVeteranYes"
									 class="form-check-label">
							Yes
						</label>
					</div>
					<div class="form-check inline-block">
						{{input type="radio"
										class="form-check-input"
										name="hasFamilyWhoIsServiceMemberOrVeteran"
										id="hasFamilyWhoIsServiceMemberOrVeteranNo"
										change=(action (mut hasFamilyWhoIsServiceMemberOrVeteran) value="target.value")
										value=false}}
						<label for="hasFamilyWhoIsServiceMemberOrVeteranNo"
									 class="form-check-label">
							No
						</label>
					</div>
				</div>
				<div class="col-12 col-sm mb-2">
					<label class="form-label">
						Were you referred by the Veteran Resource Center?
						<span class="star">*</span>
					</label>
					<div class="form-check inline-block">
						{{input type="radio"
										class="form-check-input"
										name="isReferredByVeteranResourceCenter"
										id="isReferredByVeteranResourceCenterYes"
										change=(action (mut isReferredByVeteranResourceCenter) value="target.value")
										value=true}}
						<label for="isReferredByVeteranResourceCenterYes"
									 class="form-check-label">
							Yes
						</label>
					</div>
					<div class="form-check inline-block">
						{{input type="radio"
										class="form-check-input"
										name="isReferredByVeteranResourceCenter"
										id="isReferredByVeteranResourceCenterNo"
										change=(action (mut isReferredByVeteranResourceCenter) value="target.value")
										value=false}}
						<label for="isReferredByVeteranResourceCenterNo"
									 class="form-check-label">
							No
						</label>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-12">
					<span class="card--divider"></span>
				</div>
			</div>
			<div class="row">
				<div class="col-12">
					<span class="form-title">Counseling Information</span>
				</div>
				<div class="col-12">
					<label class="form-label mt-4 mb-3">
						Check any topic(s) you would like addressed in counseling:
						<span class="star">*</span>
					</label>
				</div>
			</div>
			{{#multiselect-checkboxes
					tagName='div'
					classNames='row'
					options=adult.topics
					selection=selectedTopics
					updateSelectionValue=false
					onchange=(action 'updateTopics') as |topic isSelected|}}
				<div class="col-12 col-sm-3">
					<div class="form-check">
						{{input type="checkbox"
										id=(concat "topics" topic.id)
										class="form-check-input counselingTopic"
										checked=isSelected}}
						<label class="form-check-label checkbox" for="topics{{topic.id}}">
							{{topic.topic}}
						</label>
					</div>
				</div>
			{{/multiselect-checkboxes}}
			<div class="row">
				<div class="col-12">
					<span class="card--divider"></span>
				</div>
			</div>
		</div>
		<div id="adult-intake-3" class="form-step--item hidden">
			<div class="row">
				<div class="col-12">
					<span class="form-title">Personal History</span>
				</div>
				<div class="col-12">
					<label class="form-label mb-3">
						Have you ever been hit, slapped, thrown or molested?
						<span class="star">*</span>
					</label>
					{{inputs/toggle-radio
							idValue="hasBeenAbusedYes"
							label="Yes"
							name="hasBeenAbused"
							value="yes"
							data-toggle="hasBeenAbusedExample"}}
					{{inputs/toggle-radio
							idValue="hasBeenAbusedNo"
							label="No"
							name="hasBeenAbused"
							value="no"
							data-toggle="hasBeenAbusedExample"}}

					<div id="hasBeenAbusedExample" class="if-yes hidden">
						<div class="col-6">
							<div class="form-group">
								<label class="form-label sub-label">
									By whom?
								</label>
								{{input type="text"
												value=abusedByWhom
												class="form-control"}}
							</div>
						</div>
						<div class="col-2">
							<div class="form-group">
								<label class="form-label sub-label">
									How many times?
								</label>
								{{input type="number"
												value=abusedCount
												placeholder="XX"
												min="0"
												class="form-control"}}
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="row mt-2">
				<div class="col-12">
					<label class="form-label mb-3">
						Have there been any serious illnesses, injuries, emotional problems,
						or deaths in the immediate family, including yourself
						<span class="star">*</span>
					</label>
					{{inputs/toggle-radio
							idValue="seriousProblemsInFamilyYes"
							label="Yes"
							name="seriousProblemsInFamily"
							value="yes"
							data-toggle="seriousProblemsInFamilyExample"}}
					{{inputs/toggle-radio
							idValue="seriousProblemsInFamilyNo"
							label="No"
							name="seriousProblemsInFamily"
							value="no"
							data-toggle="seriousProblemsInFamilyExample"}}

					<div id="seriousProblemsInFamilyExample" class="if-yes hidden">
						<div class="col-12">
							<div class="form-group">
								<label for="seriousFamilyProblemsDesc" class="form-label sub-label">
									If yes, please describe:
								</label>
								<textarea id="seriousFamilyProblemsDesc"
									class="form-control"
									name="seriousFamilyProblemsDesc"
									value="seriousFamilyProblemsDesc"
									rows="3"></textarea>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="row mt-3">
				<div class="col-12 col-sm-9">
					<label class="form-label mt-3">
						Medication(s) presently taking
						<span class="star">*</span>
					</label>
					<div class="form-group">
						<!-- <select id="medicationSelect"
										value="medication"
										class="form-control">
							<option name="medication" value="" hidden>Select Medication...</option>
							{{#each adult.medications as |medication|}}
								<option name="medication" value="{{medication.id}}">{{medication.name}}</option>
							{{/each}}
						</select> -->
						{{#power-select-multiple
							placeholder="Select Medications..."
							searchField="name"
							selected=selectedMedications
							options=adult.medications
							onchange=(action (mut selectedMedications)) as |medication|}}
							{{medication.name}}
						{{/power-select-multiple}}
					</div>
				</div>
			</div>
			<div class="row mt-4">
				<div class="col">
					<label class="form-label mb-3">
						Any problems with alcohol?
						<span class="star">*</span>
					</label>
					<div class="form-check inline-block">
						{{input type="radio"
										class="form-check-input"
										name="alcoholProblem"
										id="alcoholProblemYes"
										value=Yes}}
						<label for="alcoholProblemYes"
									 class="form-check-label">
							Yes
						</label>
					</div>
					<div class="form-check inline-block">
						{{input type="radio"
										class="form-check-input"
										name="alcoholProblem"
										id="alcoholProblemNo"
										value=no}}
						<label for="alcoholProblemNo"
									 class="form-check-label">
							No
						</label>
					</div>
				</div>
				<div class="col">
					<label class="form-label mt-3">
						Have you ever had a drug/alcohol related black out?
					</label>
					{{inputs/toggle-radio
							idValue="hadBlackOutYes"
							label="Yes"
							name="hadBlackOut"
							value="yes"
							data-toggle="hadBlackOutExample"}}
					{{inputs/toggle-radio
							idValue="hadBlackOutNo"
							label="No"
							name="hadBlackOut"
							value="no"
							data-toggle="hadBlackOutExample"}}
					<div id="hadBlackOutExample" class="if-yes hidden">
						<div class="col">
							<div class="form-group">
								<label class="form-label sub-label">
									If yes, where:
								</label>
								{{input type="text"
												value=blackOutLocation
												class="form-control"}}
							</div>
						</div>
						<div class="col">
							<div class="form-group">
								<label class="form-label sub-label">
									Black out Date:
								</label>
									<div class="input-group">
										{{input type="date"
														value=blackOutDate
														class="form-control datepicker date"}}
										<div class="input-group-prepend">
											<span class="input-group-text">
												{{fa-icon "calendar" ariaLabel="Pick a Date"}}
											</span>
										</div>
									</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="row justify-content-between mb-2 align-items-center">
				<div class="col-12">
					<label class="form-label mt-3">
						Any family members with a drug or alcohol problem?
						<span class="star">*</span>
					</label>
				</div>
				<div class="col-12 col-sm-3">
					<div class="form-check">
						{{input type="radio"
										class="form-check-input"
										name="familyDrugAlcoholProblem"
										id="parent"
										value=parent}}
						<label for="parent"
									 class="form-check-label box">
							Parent/Step-parent
						</label>
					</div>
				</div>
				<div class="col-12 col-sm-3">
					<div class="form-check">
						{{input type="radio"
										class="form-check-input"
										name="familyDrugAlcoholProblem"
										id="sibling"
										value=sibling}}
						<label for="sibling"
									 class="form-check-label box">
							Sibling
						</label>
					</div>
				</div>
				<div class="col-12 col-sm-3">
					<div class="form-check">
						{{input type="radio"
										class="form-check-input"
										name="familyDrugAlcoholProblem"
										id="grandparent"
										value=grandparent}}
						<label for="grandparent"
									 class="form-check-label box">
							Grandparent
						</label>
					</div>
				</div>
				<div class="col-12 col-sm-3">
					<div class="form-check">
						{{input type="radio"
										class="form-check-input"
										name="familyDrugAlcoholProblem"
										id="friend"
										value=friend}}
						<label for="friend"
									 class="form-check-label box">
							Friend
						</label>
