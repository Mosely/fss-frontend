<div class="page-container">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="login-form">
          <form {{action 'authenticate' on='submit'}}>
            <h1 class="text-center">Log in</h1>
            <div class="form-group">
              <span class="fa fa-envelope"></span>
              {{input id='identification'
                      value=identification
                      class='form-control login-input'
                      key-press="handleInput"
                      type='text'}}
              <label class="username-label" for="identification">Enter Login</label>
              <span class="underline username-label"></span>
            </div>
            <div class="form-group">
              <span class="fa fa-lock"></span>
              {{input id='password'
                      value=password
                      key-press="handleInput"
                      class='form-control login-input'
                      type='password'}}
              <label class="password-label" for="password">Password</label>
              <span class="underline password-label"></span>
            </div>
            <button type="submit" class="btn btn-default btn-block login-form__btn">
              Login
            </button>
            <p class="mt-3">
              <a href="#">Forgot Password?</a>
            </p>
            {{#if errorMessage}}
              <p>{{errorMessage}}</p>
            {{/if}}
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
